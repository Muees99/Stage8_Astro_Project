---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/landing/hero.astro";
import Cards from "../components/landing/cards.astro";
import WhatMakesUsSpecial from "../components/landing/what-makes-us-special.astro";
import WhoWeHelp from "../components/landing/who-we-help.astro";
import OurProcess from "../components/landing/our-process.astro";
import Gallery from "../components/landing/gallery.astro";
import Client from "../components/landing/client.astro";
---

<Layout title="">
  <Hero />
  <div
    class="more w-full h-[350px] md:h-[600px] xl:h-[900px] flex justify-center items-center mt-20"
  >
    <h2
      class="text-[2.5rem] md:text-[4rem] xl:text-[6.25rem] text-center text-[rgba(255,255,255,0.21)] font-extrabold leading-[4rem] md:leading-[6.4rem] xl:leading-[10rem] uppercase"
    >
      We are more than <br /> just a website.
    </h2>
  </div>
  <Cards />
  <WhatMakesUsSpecial />
  <div
    class="more w-full h-[300px] md:h-[400px] xl:h-[600px] flex items-center"
  >
    <div class="container flex flex-col gap-3 lg:gap-0 xl:gap-3">
      <h4
        class="text-[2rem] md:text-[4rem] lg:text-7xl xl:text-[6.25rem] text-[rgba(255,255,255,0.21)] font-extrabold leading-[3.2rem] md:leading-[6.4rem] lg:leading-[10rem] uppercase"
      >
        Your vision
      </h4>
      <h4
        class="text-right text-[2rem] md:text-[4rem] lg:text-7xl xl:text-[6.25rem] text-[rgba(255,255,255,0.21)] font-extrabold leading-[3.2rem] md:leading-[6.4rem] lg:leading-[10rem] uppercase"
      >
        ...is our mission
      </h4>
    </div>
  </div>
  <WhoWeHelp />
  <OurProcess />
  <Gallery />
  <Client />
  <div
    class="w-full h-[300px] md:h-[400px] xl:h-[600px] flex items-center mb-24 happyClient"
  >
    <div class="container flex flex-col gap-3 lg:gap-0 xl:gap-3">
      <h4
        class="text-[2rem] md:text-[4rem] xl:text-[6.25rem] text-[rgba(255,255,255,0.21)] font-extrabold leading-[3.2rem] md:leading-[6.4rem] lg:leading-[10rem] uppercase"
      >
        Like to be among
      </h4>
      <h4
        class="text-right text-[2rem] md:text-[4rem] xl:text-[6.25rem] text-[rgba(255,255,255,0.21)] font-extrabold leading-[3.2rem] md:leading-[6.4rem] lg:leading-[10rem] uppercase"
      >
        our happy clients?
      </h4>
    </div>
  </div>
</Layout>

<style>
  .more {
    font-family: "Red Hat Display", sans-serif;
    background: #0a0e18;
  }

  .more h2,
  .more h4,
  .happyClient h4 {
    -webkit-text-stroke: 3px #84868b;
  }

  .happyClient {
    background-image: url("/landing/happyClientFrame.png");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }
</style>
